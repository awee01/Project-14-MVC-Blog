<div class="comments">
  {{#each this}}
  <section class="comment">

    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>

    <div class="text">
      {{comment_text}}
       <button id={{id}} type="button" class="delete-comment-btn btn" onclick="deleteCommentHandler(this.id)">Delete</button>
    </div>

  </section>
  {{/each}}
</div>
