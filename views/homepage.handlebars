{{#unless loggedIn}}

<h1>Welcome to the Tech Blog</h1>
<h2>Please Register or Login</h2>

{{/unless}}

<br>
<br>

{{#if loggedIn}}


<ol class="post-list">
    {{#each posts}}
    <li>
        <article class="post">

            <div class="title">
                <h3>{{title}}</h3>
                <p>{{post_text}}</p>
            </div>

            <div class="meta">
                Created by {{user.username}} on {{created_at}}


            </div>

        </article>
    </li>
    {{/each}}
</ol>

{{/if}}

